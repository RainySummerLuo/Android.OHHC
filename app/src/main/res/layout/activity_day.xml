<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayActivity">

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/langName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/space_mono"
            android:gravity="left|center_vertical"
            android:text="C++"

            android:textSize="30sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/space_mono"
            android:gravity="right"
            android:text="TextView"
            android:textColor="@android:color/holo_red_light"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/weekday"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/space_mono"
            android:gravity="right|center_vertical"
            android:text="TextView"

            android:textSize="18sp" />

        <thereisnospon.codeview.CodeView
            android:id="@+id/langCode"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/langWiki"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:maxHeight="80dp"
            android:text="TextView" />

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center|center_horizontal|fill_horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="?attr/colorOnBackground"
                android:gravity="center_horizontal|fill_horizontal">

                <TextView
                    android:id="@+id/dayMonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Mon"

                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/dayTueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Tue"

                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/dayWedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Wed"

                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/dayThuText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Thu"

                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/dayFriText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Fri"

                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/daySatText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Sat"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/daySunText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Sun"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorOnBackground"
                android:gravity="center|center_horizontal|center_vertical">

                <TextView
                    android:id="@+id/weekdayText0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:includeFontPadding="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekdayText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:includeFontPadding="true"
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="5dp"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekdayText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:includeFontPadding="true"
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="5dp"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekdayText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:includeFontPadding="true"
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="5dp"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekdayText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:includeFontPadding="true"
                    android:paddingLeft="6dp"
                    android:paddingTop="5dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="5dp"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekdayText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:includeFontPadding="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekdayText6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center|center_horizontal"
                    android:includeFontPadding="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorOnBackground"
                android:baselineAligned="true"
                android:gravity="center_horizontal|top">

                <TextView
                    android:id="@+id/weekdayTextLunar0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginBottom="0.8dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center_horizontal|top"
                    android:minLines="2"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:singleLine="false"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekdayTextLunar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginBottom="0.8dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center_horizontal|top"
                    android:minLines="2"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:singleLine="false"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekdayTextLunar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginBottom="0.8dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center_horizontal|top"
                    android:minLines="2"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:singleLine="false"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekdayTextLunar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginBottom="0.8dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center_horizontal|top"
                    android:minLines="2"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:singleLine="false"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekdayTextLunar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginBottom="0.8dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center_horizontal|top"
                    android:minLines="2"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:singleLine="false"

                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekdayTextLunar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="0.5dp"
                    android:layout_marginBottom="0.8dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center_horizontal|top"
                    android:minLines="2"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:singleLine="false"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/weekdayTextLunar6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="0.5dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="0.8dp"
                    android:layout_weight="1"
                    android:background="?android:colorBackground"
                    android:fontFamily="@font/space_mono"
                    android:gravity="center_horizontal|top"
                    android:minLines="2"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:singleLine="false"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>